{
    "name": "zola-tailwind",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "style-build": "tailwindcss -i src-styles/base.scss -o static/styles/main.css --minify",
        "style-watch": "tailwindcss -i src-styles/base.scss -o static/styles/main.css --watch",
        "zola-serve": "touch static/styles/main.css; zola serve",
        "zola-build": "touch static/styles/main.css; zola build"
    },
    "devDependencies": {
        "tailwindcss": "^3.0"
    }
}
